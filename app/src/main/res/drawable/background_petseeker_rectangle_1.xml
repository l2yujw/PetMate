<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->

    <item>

        <shape>
            <padding
                android:bottom="2dp"
                android:left="-2dp"
                android:right="1.5dp"
                android:top="-2dp" />

            <solid android:color="#33029FE4" />

            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#E2EDF9"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>
        </shape>
    </item>

</layer-list>