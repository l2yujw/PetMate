<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandWhite"
    tools:context=".ui.myinfo.activity.MyInfoPhotoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="게시글 제목을 입력해 주세요"

            app:layout_constraintBottom_toTopOf="@+id/iv_post_image" />

        <Button
            android:id="@+id/btn_post_submit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/background_home_rectangle_1_2"
            android:text="올리기"
            android:textAppearance="@style/pet_inf_post"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_post_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="47dp"
            android:elevation="24dp"
            android:src="@drawable/add_new_65dp"
            android:text="+"
            android:textSize="200sp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/btn_post_submit" />

        <EditText
            android:id="@+id/et_post_content"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_myinf_photo_content"
            android:gravity="top"
            android:hint="게시글 내용을 입력해 주세요"
            android:lineSpacingExtra="1sp"
            android:padding="5dp"
            android:textAppearance="@style/pet_community_post"
            android:translationY="-0.65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_post_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>