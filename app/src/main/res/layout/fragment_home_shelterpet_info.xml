<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.petseeker.shelterpetInfo.fragment.ShelterPetInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_pet_mate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="47dp"
            android:text="PET MATE"
            android:textAppearance="@style/pet_mate" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_shelter_pet_image"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="85dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/main_home_petseeker_titleimage_crop_480" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="340dp"
                android:background="@drawable/main_home_shelterpet_gradient"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shelter_pet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="19dp"
                    android:text="탈주닌자"
                    android:textAppearance="@style/pet_main_name" />

                <TextView
                    android:id="@+id/tv_shelter_pet_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="60dp"
                    android:text="1살"
                    android:textAppearance="@style/pet_main_nameSub" />

                <androidx.cardview.widget.CardView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="19dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/tv_shelter_pet_sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/background_home_shelterpet_sex_homepetcolor1_round_8_76dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sex_female" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="450dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_home_shelterpet_info_homepetcolor2_round_17_51dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="무게"
                        android:textAppearance="@style/shelterpet_inf_" />

                    <TextView
                        android:id="@+id/tv_shelter_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="3.2kg"
                        android:textAppearance="@style/shelterpet_inf_answer_" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_home_shelterpet_info_homepetcolor2_round_17_51dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="중성화"
                        android:textAppearance="@style/shelterpet_inf_" />


                    <TextView
                        android:id="@+id/tv_shelter_pet_neutered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="아니오"
                        android:textAppearance="@style/shelterpet_inf_answer_" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_home_shelterpet_info_homepetcolor2_round_17_51dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="색상"
                        android:textAppearance="@style/shelterpet_inf_" />

                    <TextView
                        android:id="@+id/tv_shelter_pet_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="흰갈"
                        android:textAppearance="@style/shelterpet_inf_answer_" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_shelter_pet_character"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginHorizontal="38dp"
                android:layout_marginTop="525dp"
                android:text="사람을 좋아하고 얌전함"
                android:textAppearance="@style/shelterpet_about_info"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="640dp"
                android:scaleType="centerInside"
                android:background="@drawable/login_password_png" />

            <TextView
                android:id="@+id/tv_shelter_pet_more_Inf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="640dp"
                android:text="추가 정보"
                android:textAppearance="@style/shelterpet_about_plus" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_shelter_pet_inf"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="670dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="840dp">
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>