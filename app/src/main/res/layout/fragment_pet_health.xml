<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pet.health.fragment.PetHealthFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="47dp"
            android:text="PET MATE"
            android:textAppearance="@style/pet_mate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_health_image"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginTop="100dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="267dp"
            android:background="@drawable/main_home_shelterpet_gradient"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_health_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="19dp"
                android:text="반려동물"
                android:textAppearance="@style/pet_main_name" />

            <TextView
                android:id="@+id/tv_health_pet_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="60dp"
                android:text="반려동물 종"
                android:textAppearance="@style/pet_main_nameSub" />

            <TextView
                android:id="@+id/tv_health_pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@id/tv_health_pet_description"
                android:text="1살"
                android:textAppearance="@style/pet_main_nameSub" />

            <ImageView
                android:id="@+id/iv_health_sex_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/background_home_shelterpet_sex_homepetcolor1_round_8_76dp"
                android:src="@drawable/sex_female" />

        </RelativeLayout>


        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="385dp"
            android:src="@drawable/pet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="383dp"
            android:text="예방접종"
            android:textAppearance="@style/pet_health_vaccination"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/pet_health_vaccination"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_pet_health_vaccination_homepetcolor2_round_15dp"
            app:layout_constraintBottom_toTopOf="@+id/pet_health_dewormer"
            app:layout_constraintEnd_toStartOf="@+id/rl_health_vaccination_record"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="접종 예정일"
                android:textAppearance="@style/pet_health_vaccination_duedate1" />

            <TextView
                android:id="@+id/tv_health_vaccination"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="2024.05.30"
                android:textAppearance="@style/pet_health_vaccination_duedate2" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pet_health_dewormer"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_pet_health_vaccination_homepetcolor2_round_15dp"
            app:layout_constraintEnd_toStartOf="@+id/rl_health_vaccination_record"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pet_health_vaccination">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="구충제 복용 예정일"
                android:textAppearance="@style/pet_health_vaccination_duedate1" />

            <TextView
                android:id="@+id/tv_health_helminthic"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="2024.05.30"
                android:textAppearance="@style/pet_health_vaccination_duedate2" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_health_vaccination_record"
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_pet_health_vaccination_petcolor9_round_15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="4.5"
            app:layout_constraintStart_toEndOf="@+id/pet_health_vaccination"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:text="기록"
                android:textAppearance="@style/pet_health_vaccination_record" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_health_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_health_weight"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="587dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/rl_health_feed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/pet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="35dp"
                android:text="체중"
                android:textAppearance="@style/pet_health_vaccination" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_health_feed"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="587dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="4.5"
            app:layout_constraintStart_toEndOf="@+id/rl_health_weight"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/pet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="35dp"
                android:text="사료 / 필요 칼로리"
                android:textAppearance="@style/pet_health_vaccination" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_health_weights"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="615dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_pet_health_vaccination_petcolor9_round_15dp"
            app:layout_constraintEnd_toStartOf="@+id/rl_health_layout_feed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_health_weight"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/tv_health_weight_kg_text"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="end"
                android:text="5"
                android:textAppearance="@style/pet_health_vaccination_duedate1" />

            <TextView
                android:id="@+id/tv_health_weight_kg_text"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="end"
                android:text="kg"
                android:textAppearance="@style/pet_health_vaccination_duedate1" />

            <TextView
                android:id="@+id/tv_health_weight_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="정상"
                android:textAppearance="@style/pet_health_weight" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_health_layout_feed"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="615dp"
            android:background="@drawable/background_pet_health_vaccination_homepetcolor2_round_15dp"
            app:layout_constraintEnd_toStartOf="@+id/rl_health_layout_kcal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/rl_health_weights"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:gravity="end"
                android:text="사료 양"
                android:textAppearance="@style/pet_health_vaccination_duedate1" />

            <TextView
                android:id="@+id/tv_health_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="500g"
                android:textAppearance="@style/pet_health_feed" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_health_layout_kcal"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="615dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_pet_health_vaccination_petcolor9_round_15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/rl_health_layout_feed"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_health_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="250"
                android:textAppearance="@style/pet_health_kcalNum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_health_kcal"
                android:gravity="top"
                android:text="kcal"
                android:textAppearance="@style/pet_health_kcal" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_health_know"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="720dp"
            android:background="@drawable/background_pet_health_know_petcolor9_roundstroke_22dp"
            android:gravity="center"
            android:text="알고 계셨나요?"
            android:textAppearance="@style/pet_health_know"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="750dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>