<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandWhite">


    <TextView
        android:id="@+id/tv_pet_mate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="47dp"
        android:text="PET MATE"
        android:textAppearance="@style/pet_mate" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="85dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pet_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="35dp">

                <ImageView
                    android:id="@+id/iv_pet_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cat2_temp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_pet_info"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="252dp"
            android:background="@drawable/main_home_shelterpet_gradient"
            android:orientation="vertical">

            <TextView
                android:id="@+id/walk_record_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="19dp"
                android:text="탈주닌자"
                android:textAppearance="@style/pet_main_name" />

            <TextView
                android:id="@+id/walk_record_pet_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="60dp"
                android:text="놀라버린 고양이"
                android:textAppearance="@style/pet_main_nameSub" />

            <TextView
                android:id="@+id/walk_record_pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp"
                android:layout_toEndOf="@id/walk_record_pet_description"
                android:text="1살"
                android:textAppearance="@style/pet_main_nameSub" />

            <androidx.cardview.widget.CardView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="19dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/iv_walk_record_pet_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_home_shelterpet_sex_homepetcolor1_round_8_76dp"
                    android:src="@drawable/sex_female" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/walk_record_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="390dp" />


    </FrameLayout>


</RelativeLayout>