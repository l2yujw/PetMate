<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.petowner.fragment.HomePetownerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pet_mate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="PET MATE"
            android:textAppearance="@style/pet_mate" />

        <Button
            android:id="@+id/btn_walk"
            android:layout_width="68dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/background_home_rectangle_1_2"
            android:text="산책"
            android:textAppearance="@style/petowner_walk" />

        <Button
            android:id="@+id/btn_emergency"
            android:layout_width="68dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="110dp"
            android:background="@drawable/background_home_rectangle_1_2"
            android:text="긴급전화"
            android:textAppearance="@style/petowner_walk" />

        <Button
            android:id="@+id/btn_petseeker"
            android:layout_width="68dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="180dp"
            android:background="@drawable/background_home_rectangle_1_2"
            android:text="보호동물"
            android:textAppearance="@style/petowner_walk" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_petowner_petlist"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="100dp" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circleindicator_petowner_petlist"
            android:layout_width="100dp"
            android:layout_height="9dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="160dp"
            android:layout_marginTop="250dp"
            app:ci_drawable="@drawable/indicator_purple"
            app:ci_drawable_unselected="@drawable/indicator_gray" />

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/background_home_rectangle_1"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="295dp"
            android:gravity="top"
            android:text="Today"
            android:textAppearance="@style/today" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_havepet_weather"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="42dp"
            android:layout_marginTop="320dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="435dp"
            android:alpha="0.9"
            android:background="@drawable/background_home_rectangle_1_1"
            android:elevation="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_havepet_schedule"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="47dp"
            android:layout_marginTop="450dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="760dp"
            android:background="@drawable/background_home_rectangle_1_2" />

        <TextView
            android:id="@+id/tv_havepet_comment"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="770dp"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="top"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="6sp"
            android:text="오늘 한줄 평 / 산책가기에 어떤지 등"
            android:textColor="#111111"
            android:textSize="13sp"
            android:translationY="-3.05sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="795dp">
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>