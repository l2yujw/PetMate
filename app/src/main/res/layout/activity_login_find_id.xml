<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandWhite">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/left_arrow" />

    <TextView
        android:id="@+id/tv_find_id_title"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:text="아이디 찾기"
        android:textColor="@color/brandBlack"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:gravity="center"
        android:text="PetMate"
        android:textAppearance="@style/pet_mate_login" />

    <View
        android:id="@+id/divider_navigation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_find_id"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@id/divider_navigation"
        android:layout_alignParentStart="true"
        android:layout_marginTop="225dp"
        android:background="@drawable/background_login_logindarkskyblue_rightround_10dp"
        android:text="아이디 찾기"
        android:textAppearance="@style/login__button1" />

    <Button
        android:id="@+id/btn_find_password"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_alignStart="@id/divider_navigation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="225dp"
        android:background="@android:color/transparent"
        android:text="비밀번호 찾기"
        android:textAppearance="@style/login__button1" />


    <TextView
        android:id="@+id/tv_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="330dp"
        android:text="이름"
        android:textAppearance="@style/login__textview" />

    <EditText
        android:id="@+id/et_name_input"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="355dp"
        android:background="@drawable/background_brandwhite_round_10dp" />

    <TextView
        android:id="@+id/tv_email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="410dp"
        android:text="이메일 주소"
        android:textAppearance="@style/login__textview" />

    <EditText
        android:id="@+id/et_email_input"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="435dp"
        android:background="@drawable/background_brandwhite_round_10dp" />

    <Button
        android:id="@+id/btn_submit_find_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="530dp"
        android:background="@drawable/background_login_logindarkskyblue_round_10dp"
        android:text="아이디 찾기"
        android:textAppearance="@style/login__button2" />

</RelativeLayout>